<% dob_label= "Respondent DOB?" %>
		
<div class="well">	
	<%= semantic_form_for @micropost do |f| %>
		<%= f.semantic_errors %>
		<%= f.inputs do %>
			
			<%= f.input :defendant, :as=>'string', :input_html => {:placeholder=>'[defendant]'} %>
			<%= f.input :content, :as=>'text', :input_html => {:class => 'autogrow', :rows=>3, :placeholder=>'[text of event]'}, :label=>'What happened?'%>
			<%= f.input :category, :label=>'Category?', :collection => post_categories %>
			<%= f.input :casenumber, :label=>'Case number?', :placeholder=>'CR..., CT..., JA..., etc.',%>
			
			<div class="input">
				<label>ADF:</label>	
				<input type="text" 
					class="span3" 
					id="micropost_adf"
					name="micropost[adf]"
					data-provide="typeahead" 
					data-items="4" 
					data-source='["Jones, Debra", "Gupta, Kavita", "Johnson, Lyvette", "Josendale, Erin", "Saccarelli, Gale", "Whitehall, Beatrix", "Wilson, Monica", "Peek, Leslie", "Abdullah, Raouf", "Edwards, Christal", "Okeke, Loretta", "Powell, Greg", "Pride-Hebron, Kelly", "Shelton, Bill", "Uba-Okarafor, Vivent", "Mungin, Vaughn", "Handy, Ronald", "Ucheomunu, Andrew", "Moore, Sonya", "Azari, Omid"]'>
				
			</div>
			<div class="control-group">
				<label class="control-label" for="">DOB</label>
				<div class="input-append date" id="micropost_dob" data-date="<%= Date.today.years_ago(18).to_s %>" data-date-format="yyyy-mm-dd">
					<input type="text" value="<%= Date.today.years_ago(18).to_s %>" readonly class="span2" name="micropost[dob]">
					<span class="add-on">
						<i class="icon-th"></i>
					</span>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="">Event Date</label>
				<div class="input-append date" id="micropost_event_date" data-date="<%= Date.today.to_s %>" data-date-format="yyyy-mm-dd">
					<input type="text" value="<%= Date.today.to_s %>" readonly class="span2" name="micropost[event_date]">
					<span class="add-on">
						<i class="icon-th"></i>
					</span>
				</div>
			</div>			
			
		<% end %>
		<%= f.actions do %>
			<%= f.action(:submit) %>
		<% end %>
	<% end %>
</div>

<script>
	$('.typeahead').typeahead()
	$('#micropost_dob').datepicker()
		.on('changeDate', function(ev) {
			$('#micropost_dob').datepicker('hide');
		})
	$('#micropost_event_date').datepicker()
			.on('changeDate', function(ev) {
			$('#micropost_event_date').datepicker('hide');
		})
</script>