
<tr>
	<td>	
		<%= link_to brief_todo.casenumber.to_s, brief_todo.retrieve_casefile %>
		<% if !brief_todo.complete %>
			<% 
			code_string="btn-mini disabled"
			button_string="due in "
			case brief_todo.daysleft
				when 0..1
					code_string+=" btn-danger"
				when 2..4
					code_string+=" btn-warning"
				when 5..7
					code_string+=" btn-primary"
			end %>
			<% if brief_todo.daysleft>0 %>
				<button class="btn <%=code_string %>"> <%=button_string+" "+brief_todo.daysleft.to_s+" on "+brief_todo.duedate.to_s %></button>
			<% else %>
				<button class="btn btn-danger btn-mini disabled">OVERDUE</button>
			<% end %>
		<% end %>
		<%=brief_todo.content%>
		<% if brief_todo.complete %>
			<em>
		<% end %>
		
		<% if brief_todo.complete %>
			</em>
		<% end %> by <%= link_to brief_todo.user.name, brief_todo.user %> 			
			<% if current_user?(brief_todo.user) || current_user.admin? %>
				<a class="btn btn-mini btn-inverse" href=<%= delete_task_path(brief_todo.id)%>>
						<i class="icon-remove icon-white"></i>
				</a>
				<% if !brief_todo.complete %>
					<a class="btn btn-mini" href=<%=update_task_path(brief_todo.id, :complete=>"true")%>>
						<i class="icon-ok"></i>
					</a>
					<a class="btn btn-mini" href=<%=update_task_path(brief_todo.id, :duedate=>brief_todo.duedate+7)%>>
						postpone
					</a>
				<% else %>
					<i class="icon-ok"></i><button class="btn btn-mini disabled">complete</button>
				<% end %>
			<% end %>
			

	</td>
</tr>

<script>
	$(".datepicker").datepicker()
</script>