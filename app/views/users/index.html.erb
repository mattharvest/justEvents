<h1>All users</h1>
<table class="table table-condensed table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Unit</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |u| %>
			<tr>
				<% title_and_name = u.title.to_s+" "+u.name.to_s %>
				<th><%=link_to title_and_name, u %></th>
				<th><%= u.email %></th>
				<th><%= u.unit %></th>
		<% end %>		
	</tbody>
</table>