<% if signed_in? %>
	<div class="container-fluid">
		<h1>Case file for <%=@casefile.defendant %></h1>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<td>Defendant</td>
			<td>CCN</td>
			<td>CR</td>
			<td>CA</td>
			<td>CJ</td>
			<td>JA</td>
			<td>CT</td>
			<td>SAO</td>
			<td>Edit</td>
			<% if current_user.admin? %>
				<td>Delete Button</td>
			<% end %>
		</tr>
		<tr>
			<td>	<%= link_to @casefile.defendant, @casefile %>	</td>
			<td>	<%= @casefile.ccn %> 		</td>
			<td>	<%= @casefile.cr %> 		</td>
			<td>	<%= @casefile.ca %> 		</td>
			<td>	<%= @casefile.cj %> 		</td>
			<td>	<%= @casefile.ja %> 		</td>
			<td>	<%= @casefile.ct %> 		</td>
			<td>	<%= @casefile.sao %> 		</td>
			<td>	<%= link_to "edit", edit_case_path(@casefile),
					:method => :edit,
					:class => "btn btn-mini" %>	</td>
			<% if current_user.admin? %>
					<td>	
					<%= link_to "delete", @casefile, 	:method => :delete, 
														:confirm => "You sure?"
														%>							
					</td>
			<%end%>
		</tr>
	</table>
		<div class="row-fluid">
			<h3> What needs to be done:</h3>
			<div class="span12">
				<table class="table table-striped">
					<%= render :partial => 'shared/todo_item', :collection => @todos %>
				</table>
			</div>
		</div>
		<div class="row-fluid">
			<h3> What's happened: </h3>
				<table class="table table-striped">
					<%= render :partial => 'shared/feed_item', :collection => @microposts %>
				</table>
		</div>

	<div>
<% else %>
	<%= render 'shared/introstub' %>
<% end %>
<div>