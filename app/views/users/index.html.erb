<h1>All users</h1>
<table class="table table-condensed table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Unit</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |u| %>
			<tr>
				<th><%=link_to u.name, u %></th>
				<th><%= u.email %></th>
				<th><%= u.unit %></th>
		<% end %>		
	</tbody>
</table>