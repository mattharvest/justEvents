 <% if signed_in? %>
	<h1>Petitions</h1>
		<%= will_paginate @petitions %>
		<table class="table table-striped table-bordered table-condensed">
		<tr>
			<td>Defendant</td>
			<td>CCN</td>
			<% if current_user.admin? %>
				<td>Delete Button</td>
			<% end %>
		</tr>
		<tr>
			<% if !@petitions.count[0].nil? %>
				<%= render :partial => 'petition_item', :collection => @petitions %>
			<% end %>
		</tr>
	</table>
	<%= will_paginate @petitions %>

<% else %>
	<%= render :partial => 'shared/not_signed_in' %>
<% end %>
