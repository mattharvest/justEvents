
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th colspan="3">Last 24 hrs... </th>
		</tr>
	</thead>
	<tbody>
		<% @yesterdays_posts.sort_by {|post| post.created_at}.each do |p| %>
			<tr>
				<% casefile = p.get_casefile %>
				<th> <%= link_to p.user.name, p.user %> <%=p.created_at.to_time.in_time_zone('EST').to_s(:time) %> </th>
				<th> <%= link_to casefile.defendant, casefile %> </th>
				<th> <%= p.content %>
			</tr>
		<% end %>
	</tbody>
</table>