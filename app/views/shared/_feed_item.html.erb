<tr>
	<td>
	<blockquote>
	<p>
	<button class="btn btn-info btn-mini disabled"><%= feed_item.category.to_s %></button> <%= feed_item.content.to_s %>
	</p>
	<small>	<%= link_to feed_item.user.name, feed_item.user %></small>

	<small> Posted <%= time_ago_in_words(feed_item.created_at) %> ago in <%= link_to feed_item.defendant.to_s+" "+feed_item.casenumber.to_s, feed_item.get_casefile %>
		<% if current_user?(feed_item.user) || current_user.admin? %>
			<i class="icon-remove"></i><%= link_to "delete", feed_item, 	
												:method => :delete, 
												:confirm => "You sure?", 
												:class => "btn btn-mini",
												:title => "delete this micropost"
												%>
		<% end %>
	</small>
	</blockquote>
	</td>
</tr>
