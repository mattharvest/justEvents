<% if signed_in? %>
	<h1>Your Search Results...</h1>
	<h3><i class="icon-download"></i><%= link_to 'Download as CSV', petition_csv_path(
				:type=>'petition_by_date', 
				:start=>@start_date, 
				:end=>@end_date,
				) %>
				</h3>
	
	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Respondent</th>
				<th>Filed on:</th>
				<th>CCN</th>
				<th>ASA</th>
			</tr>
		</thead>
		<tbody>
			<%= render :partial => 'shared/petition_item', :collection => @petitions %>
		</tbody>
	</table>
	
<% else %>
	<%= render 'shared/introstub' %>
<% end %>