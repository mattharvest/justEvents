<% if signed_in? %>
	<h1>Your Search Results...</h1>
	
	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>	Event Date: 	</th>
				<th>	Defendant:		</th>
				<th>	Casenumber:		</th>
				<th>	ASA: 			</th>
				<th>	Unit:			</th>
				<th>	ASA Email: 		</th>
				<th>	D.O.B: 			</th>
				<th>	Attorney: 		</th>
				<th>	Category: 		</th>
				<th>	What Happened: 	</th>
				<th>	Created On: 	</th>
				<th>	Gang:			</th>
				<th>	Jail:			</th>
				<th>	Probation:		</th>
				<th>	Community Service:	</th>
				<th>	Judge:			</th>
				<th>	Lead Charge:	</th>
				<th>	Convicted Charges:	</th>
				<th>	Enhanced:		</th>
				<th>	Guidelines:		</th>
				<th>	Team Leader:	</th>
	
				<%if current_user.admin? %>
					<th>	Delete Button: 	</th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<%= render :partial => 'shared/post_item', :collection => @microposts %>
		</tbody>
	</table>
	
<% else %>
	<div class="hero-unit">
		<h1>You're not logged in!</h1>
		<p>Please log in or sign up.</p>
		<a class="btn btn-primary btn-large" href="<%= signup_path %>">Sign Up!</a>
		<h6>This software is available only to Prince George's County ASAs.  If you are not on the whitelist, your signup will fail.  Contact ASA Bohrer with any questions.</h6>
	</div>
<% end %>