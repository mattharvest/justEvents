<% if signed_in? %>
	<h1>All Posts</h1>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<td>	Event Date: 	</td>
			<td>	Defendant:		</td>
			<td>	ASA: 			</td>
			<td>	Unit:			</td>
			<td>	ASA Email: 		</td>
			<td>	D.O.B: 			</td>
			<td>	Attorney: 		</td>
			<td>	Category: 		</td>
			<td>	What Happened: 	</td>
			<td>	Created On: 	</td>
			<td>	Delete Button: 	</td>
		</tr>
		<%= render :partial => 'shared/post_item', :collection => @posts %>
	</table>
<% else %>
	<div class="hero-unit">
		<h1>You're not logged in!</h1>
		<p>Please log in or sign up.</p>
		<a class="btn btn-primary btn-large" href="<%= signup_path %>">Sign Up!</a>
		<h6>This software is available only to Prince George's County ASAs.  If you are not on the whitelist, your signup will fail.  Contact ASA Bohrer with any questions.</h6>
	</div>
<% end %>